<h1> Orden <%= order.number %> Comentarios </h1>

<div class=' pretty_table'>
<table>
  <thead>
  <tr class='odd'>
    <th class='column1_header'>Name</th><th></th><th></th>
  </tr>
  </thead>
  <% for comment in order.comments %>
    <tr class='<%= cycle("odd", "")%>'>
      <td><%= link_to comment.name, admin_fulfillment_order_comment_path(order, comment) %></td>
      <td><%= link_to "Editar", edit_admin_fulfillment_order_comment_path(order, comment) %></td>
      <td><%= link_to "Borrar", admin_fulfillment_order_comment_path(order, comment), :confirm => 'Esta seguro?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
</div>
<p><%= link_to "Nuevo comentario", new_admin_fulfillment_order_comment_path(order), :class => 'button' %></p>

