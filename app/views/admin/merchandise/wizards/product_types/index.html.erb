<%= render :partial => '/admin/merchandise/wizards/sub_header'%>
<% if  @product_types.empty? %>
  <h3>New Product Type</h3>
<% else %>
  <h3>Seleccione un tipo de producto</h3>
<% end %>

<div id='shopping_addresses_selections' class='span-18 last'>
  <% @product_types.each do |product_type| %>
    <div class='row'>
    	<div class="three columns">
      <label><%= product_type.name %></label>
      </div>
      <div class="nine columns">
      <%= button_to 'Usar', admin_merchandise_wizards_product_type_path(product_type),
                    :class => "small button inline left",
                    :method => :put %>
      </div>
    </div>
    <hr/>
  <% end %>
</div>
<%= form_for @product_type, :url => admin_merchandise_wizards_product_types_path do |product_type_form| %>
  <%= render :partial =>  'form', :locals => {:form => product_type_form}  %>
<% end %>