<%= render :partial => '/admin/merchandise/sub_header'%>

<div class='admin_title_header'>
  <h3>Marcas</h3>
  <%= link_to "Nueva marca", new_admin_merchandise_brand_path, :class => 'button' %>
</div>

<div class="admin_brands">
  <table>
    <thead>
    <tr class='odd'>
      <th class='column1_header'>Nombre</th><th></th><th></th>
    </tr>
    </thead>
    <% for brand in @brands %>
      <tr class='<%= cycle("odd", "")%>'>
        <td><%= link_to brand.name, admin_merchandise_brand_path(brand) %></td>
        <td><%= link_to "Editar", edit_admin_merchandise_brand_path(brand) %></td>
        <td><%= link_to "Borrar", admin_merchandise_brand_path(brand), confirm: 'Esta seguro?', method: :delete %></td>
      </tr>
    <% end %>
  </table>
</div>