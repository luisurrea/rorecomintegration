<%= render :partial => '/admin/merchandise/sub_header'%>

<h3>Editar Marca - <%= @brand.name %></h1>

<%= form_for(@brand, :url => admin_merchandise_brand_path(@brand)) do |f| %>
  <%= render :partial => 'form', :locals => {:f => f} %>
  
  <%= f.submit 'Actualizar', :class => 'button' %>
<% end %>

<p>
  <%= link_to 'Mostrar', admin_merchandise_brand_path( @brand ), :class => 'button' %>
  <%= link_to 'Ver todo', admin_merchandise_brands_path, :class => 'button' %>
</p>