<% if @shipping_zone.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@shipping_zone.errors.count, "error") %> Problemas al guardar esta zona de envio:</h2>

    <ul>
    <% @shipping_zone.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

