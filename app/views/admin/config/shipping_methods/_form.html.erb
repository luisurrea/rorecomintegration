<% if @shipping_method.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@shipping_method.errors.count, "error:") %> Problemas al guardar el metodo de envio:</h2>

    <ul>
    <% @shipping_method.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<fieldset>
  <label>Nombre</label>
  <%= f.text_field :name %>

  <label>Zona Entrega</label>
  <%= f.select :shipping_zone_id, @shipping_zones %>
</fieldset>

<%= f.submit "Crear", :class => "button" %>

