<div class="admin_title_header">
  <h3>Metodos de Envio</h3>
  <%= link_to "Nuevo metodo", new_admin_config_shipping_method_path, :class => 'button' %>
</div>

<div class="admin_shipping_methods">
  <table>
    <thead>
    <tr class='odd'>
      <th class='column1_header'>Nombre</th>
      <th></th>
      <th></th>
    </tr>
    </thead>

  <% @shipping_methods.each do |shipping_method| %>
    <tr class='<%= cycle("odd", "")%>'>
      <td><%= shipping_method.name %> </td>
      <td><%= link_to "Editar", edit_admin_config_shipping_method_path(shipping_method) %></td>
    </tr>
  <% end %>
  </table>
</div>

