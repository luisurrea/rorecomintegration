<% if @tax_rate.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@tax_rate.errors.count, "error") %> Problema al ingresar la tarifa de impuesto:</h2>

    <ul>
    <% @tax_rate.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<fieldset>
  <label>Porcentaje</label>
  <%= f.text_field :percentage %>

  <label>categoria de impuesto</label>
  <%= f.select :tax_category_id, @tax_categories, {:include_blank => true} %>

  <label>Pais</label>
  <%= select_tag :select_country, options_from_collection_for_select(@countries, "second", "first"), {:include_blank => true} %>

  <label>Estado</label>
  <%= f.select :state_id, @states, {:include_blank => true} %>

  <label>Fecha de Inicio</label>
  <div class='date-select'>
    <%= f.date_select :start_date %>
  </div>

  <label>Fecha fin</label>
  <div class='date-select'>
    <%= f.date_select :end_date %>
  </div>

  <label>Activar</label>
  <%= f.check_box :active %>
</fieldset>

<%= f.submit "Crear", :class => "button" %>

