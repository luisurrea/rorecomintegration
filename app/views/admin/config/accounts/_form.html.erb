<% if @account.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@account.errors.count, "error") %> Problemas al guardar la cuenta:</h2>

    <ul>
    <% @account.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<fieldset>
  <label>Nombre</label>
  <%= f.text_field :name %>

  <label>Tipo de Cuenta</label>
  <%= f.text_field :account_type %>

  <label>Cargo Mensual</label>
  <%= f.text_field :monthly_charge %>

  <label>Activar</label>
  <%= f.check_box :active %>
</fieldset>

