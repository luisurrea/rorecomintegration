<h3>Usuarios - Total: <%= @active_users.count%></h3>

<% content_for :sidemenu do %>
  <div style="text-align:center">
    <%= link_to "Nuevo usuario", new_admin_user_path, :class => "button", :id => "new_user_button" %>
  </div>
  <div class="admin_filters">
    <%= form_tag admin_users_path, :method => 'get', :id => "users_search" do %>
      <label>Nombre</label>
      <%= text_field_tag :first_name, params[:first_name] %>

      <label>Apellido</label>
      <%= text_field_tag :last_name, params[:last_name] %>

      <label>Email</label>
      <%= text_field_tag :email, params[:email] %>

      <div style='text-align:center'>
        <%= submit_tag "Buscar", :name => nil, :class => "small button" %>
      </div>
      <div id="users">
        <%= render 'users' %>
      </div>
    <% end %>
  </div>
<% end %>


<div class="admin_users">
  <table>
    <thead>
    <tr class='odd'>
      <th  class='column1_header'><%= sortable "Nombre" %></th>
      <th><%= sortable "Apellido" %></th>
      <th><%= sortable "email" %></th>
      <th>Estado</th>
      <th>Creado en</th>
    </tr>
    </thead>
    <% @users.each do |user| %>
      <tr class='<%= cycle("odd", "")%>'>
        <td><%= link_to user.first_name, edit_admin_user_path(user) %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.state %></td>
        <td><%= user.created_at %></td>
      </tr>
    <% end %>
  </table>

  <%= will_paginate @users %>
</div>

