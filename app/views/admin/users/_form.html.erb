<fieldset>
  <legend>Datos del usuario</legend>

  <div class="row">
    <div class="six columns">
      <label>Nombre</label>
      <%= form.text_field :first_name %>

      <label>Email</label>
      <%= form.text_field :email %>

      <label>Estado</label>
      <%= form.select :state, @states %>
    </div>

    <div class="six columns">
      <label>Apellido</label>
      <%= form.text_field :last_name %>

      <label>Cumplea単os</label>
      <%= form.text_field :form_birth_date, :class => "eleven columns ui-yearpicker" %>
    </div>
  </div>
</fieldset>

<% if current_user.super_admin? %>
  <fieldset id="admin-password" class='span-12'>
    <p>Deje esto en blanco si no quiere cambiar la contrase単a.</p>
    <ul>
      <li>
        <%= form.label :password, 'Contrase単a' %>
        <%= form.password_field :password %>
      </li>
      <li>
        <%= form.label :password_confirmation, 'Confirme la contrase単a' %>
        <%= form.password_field :password_confirmation %>
      </li>
    </ul>
  </fieldset>
<% end %>
<fieldset>
  <legend>Roles de Usuario</legend>
  <% @all_roles.each do |role| %>
    <div class="property_form left span-9 last">
      <% checked = @user.id && @user.roles.include?(role)%>
      <%= check_box_tag "user[role_ids][]", role.id, checked %>
      <%= role.name %>
    </div>
  <% end %>
</fieldset>