<h3>Ordenes</h3>

<% content_for :sidemenu do %>

  <div class='admin_filters'>
    <%= form_tag admin_history_orders_path, :method => 'get', :id => "products_search" do %>
      <label>Estado Orden</label>
      <%= select_tag "state", "<option>in_progress</option><option>complete</option>".html_safe , :include_blank => true %>
      <label>Estado POL</label>
      <%= select_tag "polstate", "<option>Transaccion aprobada</option><option>Pendiente, Por favor revisar si el debito fue realizado en el Banco</option><option>Transaccion en proceso de validacion</option><option>Transaccion rechazada</option><option>Transaccion fallida</option><option>Transaccion rechazada por la entidad</option>".html_safe , :include_blank => true %>

      <div style="text-align:center; margin-top: 15px">
        <%= submit_tag "Buscar", :name => nil, :class => 'button red-button' %>
      </div>
      </p>
      <div id="order_hidden">
        <%= hidden_field_tag :direction, params[:direction] %>
        <%= hidden_field_tag :sort, params[:sort] %>
      </div>
    <% end %>
    <div class='clearfix'></div>
  </div>
<% end %>

<div class="history_orders">
  <table>
    <thead>
      <tr class='odd'>
        <th class='column1_header'>Numero</th>
        <th>Estado</th>
        <th>Nombre</th>
        <th>Email</th>
        <th>Estado POL</th>
        <th>Completa en</th>
        <!--<th>Enviada</th>-->
      </tr>
    </thead>

  <% @orders.each do |order| %>
    <tr class='<%= cycle("odd", "")%>'>
      <td><%= link_to order.number, admin_history_order_path(order) %></td>
      <td><%= order.state %></td>
      <td><%= order.name %></td>
      <td><%= order.email %></td>
      <td><%= order.polstate %></td>
      <td><%= order.completed_at %></td>
      <!--<td><%= order.has_shipment?.to_s %></td>-->
    </tr>
  <% end %>
  </table>
<%= will_paginate @orders %>  
</div>

