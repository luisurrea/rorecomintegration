
<% if @variant.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@variant.errors.count, "error") %> Problema al guardar la orden de compra:</h2>

    <ul>
    <% @variant.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class='clear'></div>
<div class='span-12'>
  <div class='span-5'>
    <%= f.label :qty_to_add, 'Agregar / restar cantidad' %>
  </div>
  <div class='span-6 last'>
    <%= f.number_field :qty_to_add, {:step => 1} %><br />
    <h5>* Si Desea restar cantidades use signo menos, p.ej. -5</h5>
    
  </div>


  <!--<div class='span-5'>
    <label>valor ($$$) Devuelto por el proveedor</label>
  </div>-->
  <div class='span-6 last'>
    <%= hidden_field_tag :refund, 0.00, {:step => 0.01} %>
  </div>

</div>

<div class='clear'></div>