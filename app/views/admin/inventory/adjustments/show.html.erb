<h3>Ajuste de inventario para <%= @product.name %></h3>

<div class="admin_adjustments">
  <table>
    <thead>
      <tr>
        <th>SKU</th>
        <th>En Stock</th>
        <th>pendiente al cliente</th>
        <!--<th>Cuenta pendiente del proveedor</th>-->
        <th></th>
      </tr>
    </thead>
    <% @product.variants.each do |variant| %>
      <tr>
        <td><%= variant.sku %></td>
        <td><%= variant.inventory.count_on_hand %></td>
        <td><%= variant.inventory.count_pending_to_customer %></td>
        <!--<td><%= variant.inventory.count_pending_from_supplier %></td>-->
        <td><%= link_to "Cambiar", edit_admin_inventory_adjustment_path(variant) %></td>
      </tr>
    <% end %>
  </table>
</div>

<p>
  <%= link_to "Ajustar otro producto", admin_inventory_adjustments_path, :class => 'button' %>
  <%= link_to "Ver producto", admin_merchandise_product_path(@product), :class => 'button' %>
</p>