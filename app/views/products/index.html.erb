<% content_for :head do -%>
  <%= stylesheet_link_tag 'products_page.css' %>
<% end %>
<div id="containerrightcont">
  <div class="eleven columns centered">	
	<% if  @products.empty?  %>
		<%if @noproducttype==true %>
			<div class="panel"><h5><%=@categbreadcrumb%></h5></div>
			<% @children.each do |pt_tab| %>
   				<div id="category-links"> <%= link_to_unless_current pt_tab.name, products_path(:product_type_id => pt_tab.id) %> </div>
 		  	<% end %>
		<%elsif @haschildren==true %>
			<div class="panel"><h5><%=@categbreadcrumb%></h5></div>
			<% @children.each do |pt_tab| %>
   				<div id="category-links"> <%= link_to_unless_current pt_tab.name, products_path(:product_type_id => pt_tab.id) %> </div>
 			<% end %>			
		<%else%>
			<div class="panel"><h5>La categoria no tiene productos</h5></div>
		<%end%>	
	<%elsif @haschildren==true %>
		<div class="panel"><h5><%=@categbreadcrumb%></h5></div>
		<% @children.each do |pt_tab| %>
   				<div id="category-links"> <%= link_to_unless_current pt_tab.name, products_path(:product_type_id => pt_tab.id) %> </div>
 		<% end %>
	<%else%>	
		<div class="panel"><h5><%=@categbreadcrumb%></h5></div>
		<div class="panel">
	     	<%= will_paginate @products %>	
	    </div>
	    <% @products.each_with_index do |product, i| %>
      		<div id="product-list">
        		<%= link_to image_tag(product.featured_image(:small)), product_path(product), title: product.name %>
          		<h3><%=link_to product.name, product_path(product) %> <span class="price"> <%= number_to_currency product.price_range.first %>
  	          	<% if product.price_range? %>
    	            to <%= number_to_currency product.price_range.last %>
      	      	<% end %></span></h3> 
      	 		<p><%= raw truncate(strip_tags(product.description), length: 250) %></p>  
      		</div>
      	<% end %>	
      	<div class="panel">
      		<%= will_paginate @products %>
      	</div>
    <%end%>
  </div>
</div>

<div id="containerleftcont">
	<%= render 'shared/main_product_tabs' %>
</div>


