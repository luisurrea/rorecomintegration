<% content_for :head do -%>
  <%= stylesheet_link_tag 'home_page.css' %>
  <%= stylesheet_link_tag 'products_page.css' %>
<% end %>
<div id="containerrightcont">
  <div class="eleven columns centered">	
	<% if  @products.empty?  %>
		<%if @noproducttype==true %>
			<div class="panel"><h5><%=@categbreadcrumb%></h5></div>
			<% @children.each do |pt_tab| %>
   				<div id="category-links"> <%= link_to_unless_current pt_tab.name, products_path(:product_type_id => pt_tab.id) %> </div>
 		  	<% end %>
		<%elsif @haschildren==true %>
			<div class="panel"><h5><%=@categbreadcrumb%></h5></div>
			<% @children.each do |pt_tab| %>
   				<div id="category-links"> <%= link_to_unless_current pt_tab.name, products_path(:product_type_id => pt_tab.id) %> </div>
 			<% end %>			
		<%else%>
			<div class="panel"><h5>La categoria no tiene productos</h5></div>
		<%end%>	
	<%elsif @haschildren==true %>
		<div class="panel"><h5><%=@categbreadcrumb%></h5></div>
		<% @children.each do |pt_tab| %>
   				<div id="category-links"> <%= link_to_unless_current pt_tab.name, products_path(:product_type_id => pt_tab.id) %> </div>
 		<% end %>
	<%else%>	
		<div class="panel"><h5><%=@categbreadcrumb%></h5></div>
		<% if params[:page].present?%>
		<div class="panel">
				<%= will_paginate @products %>	
	  </div>
	  <%end%>
	  <ol id='interesting_items-list'>
	    <% @products.each_with_index do |product, i| %>
	    	<li class='four columns' style="height: 240px; overflow: hidden;">
      		<div class="interesting_items-details">
      			<%=link_to product.name, product_path(product) %>
      		</div>
        	<div class="interesting_items-image">
        			<%= link_to image_tag(product.featured_image(:small)), product_path(product), title: product.name %>
        	</div>
          <div class="interesting_items-details-price">
          	 <%= number_to_currency(product.price_range.first, :precision => 0, :separator => ".") %>
  	         <% if product.price_range? %>
    	          to <%= number_to_currency product.price_range.last %>
      	     <% end %> 
      	     <br />
      	     <% unless product.variants.empty?%>
      		   	<%= form_for  @cart_item, :as => :cart_item,
                  	:url  => shopping_cart_items_path(@cart_item),
                  	:html => { :id => 'new_cart_item' } do |f| %>
        					<%= f.hidden_field :variant_id, :value => product.variants.first.try(:id), :class => 'formvars' %>
   						    <%= f.hidden_field :quantity, :value => 1 , :class => 'formvars'%>
					        <%= submit_tag 'Agregar al carro to Cart', :id =>'submit_add_to_cart', :class => 'small radius button'%>
      		     <% end %>
      	     <%end%>
      	 	</div>
      	</li>
      <% end %>	
    </ol>
  <%end%>
	</div>
	<%= will_paginate @products %>	
</div>
<div id="containerleftcont">
	<%= render 'shared/main_product_tabs' %>
</div>
<% content_for :below_body do -%>
  <script>
    Hadean.Utility.registerOnLoadHandler(Hadean.Cart.NewForm.initialize());
  </script>
<% end %>

