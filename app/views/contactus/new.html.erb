<div class="eleven columns centered">
<div class="panel ">
<h5>Contacto</h5>
</div>
<h5>Email: info@inoxdobrasil.com.co</h5>


<div class="six columns centered">

<%= form_for @message, :url => contacto_path(@message) do |form| %>
<fieldset>
	<% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being sent:</h2>

      <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<div class="twelve columns">
	<p>
		<%= form.label :name, 'Nombre *' %>
		<%= form.text_field :name %>
	</p>
	<p>
		<%= form.label :email, 'Direccion de correo electronico *' %>
		<%= form.text_field :email %>
	</p>
	<p>
		<%= form.label :body, 'Escriba su mensaje *' %>
		<%= form.text_area :body %>
	</p>
	<%= form.submit "Enviar", :class => 'button' %>
	<br /><br />
	</div>
	</fieldset>
	<span style="color: red">* Requerido.</span>
<% end %>
</div>
</div>