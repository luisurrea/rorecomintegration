<% content_for :head do -%>
  <%= stylesheet_link_tag 'signup.css' %>
<% end %>
<div id ='signupform'>
  <h3> <%= I18n.t :reset_password_title %> </h3>
  <p> <%=t :reset_password_text %>  </p>
	<div class="six columns centered">
  	<%= form_for(@user, :url => customer_password_reset_path(@user)) do |f| %>
    	<fieldset>
      	<%= f.label :email %><br />
      	<%= f.text_field :email %>
    		<p> <%= submit_tag 'Continuar', :class => 'small button' %> </p>
   		  </fieldset>
  	<% end %>
 	</div>
</div>